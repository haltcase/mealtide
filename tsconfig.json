{
	"extends": "@haltcase/style/typescript/next",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"moduleResolution": "bundler",
		"target": "ES2018",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules"],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		"**/*.mjs",
		".*.js",
		".eslintrc.cjs",
		"next.config.ts",
		"postcss.config.js",
		".next/types/**/*.ts"
	]
}
